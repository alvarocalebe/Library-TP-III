@model Library.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "";
}

<style>
    main {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #f5f7fa;
    }

    h2 {
        font-size: 1.8rem;
        color: #333;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    #forgotPasswordForm {
        max-width: 400px; /* Largura máxima do formulário */
        width: 100%; /* Largura total */
        padding: 2rem; /* Espaçamento interno */
        border-radius: 8px; /* Bordas arredondadas */
        background: #ffffff; /* Fundo branco do formulário */
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* Sombra para dar profundidade */
    }

        #forgotPasswordForm h4 {
            font-size: 1.2rem; /* Tamanho da fonte */
            color: #555; /* Cor do texto */
            margin-bottom: 1.2rem; /* Margem inferior */
            text-align: center; /* Centraliza o texto */
        }

    .form-group {
        margin-bottom: 1rem; /* Margem inferior dos grupos de formulário */
    }

    .form-control {
        border-radius: 4px; /* Bordas arredondadas */
        border: 1px solid #ddd; /* Borda cinza */
        padding: 0.6rem; /* Ajuste o espaçamento interno para igualar ao botão */
        width: 100%; /* Largura total */
        box-sizing: border-box; /* Para incluir padding e border na largura total */
    }

    .text-danger {
        font-size: 0.9rem; /* Tamanho da fonte para mensagens de erro */
        color: #d9534f; /* Cor para mensagens de erro */
    }

    .btn-outline-dark {
        background-color: #343a40; /* Cor de fundo do botão */
        color: #ffffff; /* Cor do texto do botão */
        padding: 0.6rem; /* Espaçamento interno do botão */
        border-radius: 4px; /* Bordas arredondadas */
        border: none; /* Sem borda */
        font-size: 1rem; /* Tamanho da fonte do botão */
        cursor: pointer; /* Muda o cursor para mão ao passar sobre o botão */
        transition: background-color 0.3s ease; /* Transição suave para mudança de cor */
        width: 100%; /* Largura total do botão */
    }

        .btn-outline-dark:hover {
            background-color: #23272b; /* Cor do botão ao passar o mouse */
        }
</style>

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>
    <section id="forgotPasswordForm">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Digite seu email</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-dark">Enviar link por email</button>
            </div>
        }
    </section>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
